# Sensor Tower MCP Configuration
# Copy this file to .env and fill in your values
# 
# IMPORTANT: Never commit .env files to version control!
# This file contains sensitive information like API tokens.

# Required: Your Sensor Tower API token for full endpoint testing
# Get your token from: https://app.sensortower.com/users/edit/api-settings
SENSOR_TOWER_API_TOKEN=your_primary_token_here

# Optional: Backup API token for automatic failover when primary quota is exhausted
# The server will automatically switch to this token when the primary hits rate limits
SENSOR_TOWER_API_TOKEN_BACKUP=your_backup_token_here

# Optional: API Configuration
API_BASE_URL=https://api.sensortower.com
PORT=8666

# Optional: Testing Configuration  
TIMEOUT=60
TRANSPORT=stdio

# Optional: Docker Configuration
COMPOSE_PROJECT_NAME=sensortower-mcp
